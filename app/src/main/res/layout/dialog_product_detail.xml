<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="0dp">

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/close_button_background"
        android:contentDescription="Đóng chi tiết sản phẩm"
        android:elevation="4dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hero Image Section with Glow Effect -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hero_image_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/detail_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Hình ảnh chi tiết sản phẩm" />

        </androidx.cardview.widget.CardView>

        <!-- Glow Gradient Overlay - trắng đậm nhạt từ dưới lên trên -->
        <View
            android:id="@+id/glow_overlay"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/product_glow_gradient_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Golden accent line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/product_golden_accent_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Product Name Overlay on Glow -->
        <TextView
            android:id="@+id/detail_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#2C3E50"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowColor="#80FFFFFF"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="10"
            android:lineSpacingExtra="2dp"
            android:gravity="start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content Section -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@android:color/transparent"
        android:fillViewport="false"
        app:layout_constraintTop_toBottomOf="@+id/hero_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Price Section with Golden Background -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/price_golden_background"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/detail_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Origin Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@drawable/product_golden_accent_line"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/detail_product_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#34495E"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Description Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@drawable/product_golden_accent_line"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/detail_product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6dp"
                    android:textColor="#5D6D7E"
                    android:textSize="16sp"
                    android:justificationMode="inter_word" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
